{
  "compilerOptions": {
    "jsx": "react",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "react-tab-set": [
        "src"
      ],
      "react-tab-set/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "stories/**/*"
  ]
}
