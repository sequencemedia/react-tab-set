{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "jsx": "react",
    "baseUrl": "."
  },
  "include": [
    ".storybook/**/*",
    "src/**/*"
  ]
}
